// 数据列表卡片
.data-list-card
  width: 100%
  box-shadow: none !important
  margin-bottom: 20px 
  .el-card__body
    display: flex
    justify-content space-between 
    align-items: center
    padding: 15px 20px
    .left
      font-size: 16px
      .title
        margin-left: 5px

// 分页       
.page
  text-align: right
  margin-top: 20px
  margin-bottom: 50px
  .el-pagination
    padding: 2px 0
    .btn-next
      margin-right: 0

// 上传组件
.avatar-uploader .el-upload 
  border: 1px dashed #d9d9d9
  border-radius: 6px
  cursor: pointer
  position: relative
  overflow: hidden
.avatar-uploader .el-upload:hover 
  border-color: #409eff
.avatar-uploader-icon, .banner-uploader-icon 
  font-size: 28px
  color: #8c939d
  width: 100px
  height: 100px
  line-height: 100px
  text-align: center
.avatar 
  width: 100px
  height: 100px
  display: block
.banner-uploader-icon
  width: 200px
  height: 100px
.banner
  width: 200px
  height: 100px
  display: block